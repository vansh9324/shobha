{
  "version": 2,
  "builds": [
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "templates/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/login",
      "dest": "/templates/login.html"
    },
    {
      "src": "/app",
      "dest": "/templates/index.html"
    },
    {
      "src": "/",
      "dest": "/templates/landing.html"
    },
    {
      "src": "/(.*)",
      "dest": "/templates/$1.html"
    }
  ]
}
